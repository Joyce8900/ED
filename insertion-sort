def insertion_sort(v,n):
   
    if (n<=1):
        return
    insertion_sort(v,n-1)
    fim = v[n-1]

    i = n-2
    while(i>=0 and v[i] > fim):
        v [i+1] = v [i]
        i = i-1
    v[i+1] = fim

teste = [3,1]
print (insertion_sort(teste, len(teste)))
print("The Original array is: ", teste)

insertion_sort(teste, len(teste))
print("The Sorted array is :", teste)
